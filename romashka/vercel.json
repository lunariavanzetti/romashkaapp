{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } },
    { "src": "api/**/*.ts", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/assets/(.*)", "dest": "/assets/$1" },
    { "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot))", "dest": "/$1" },
    { "src": "/", "dest": "/index.html" },
    { "src": "/dashboard", "dest": "/index.html" },
    { "src": "/integrations", "dest": "/index.html" },
    { "src": "/agent-setup", "dest": "/index.html" },
    { "src": "/settings", "dest": "/index.html" },
    { "src": "/analytics", "dest": "/index.html" },
    { "src": "/knowledge", "dest": "/index.html" },
    { "src": "/channels", "dest": "/index.html" },
    { "src": "/playground", "dest": "/index.html" },
    { "src": "/templates", "dest": "/index.html" },
    { "src": "/automation", "dest": "/index.html" },
    { "src": "/billing", "dest": "/index.html" },
    { "src": "/pricing", "dest": "/index.html" },
    { "src": "/signin", "dest": "/index.html" },
    { "src": "/signup", "dest": "/index.html" },
    { "src": "/onboarding", "dest": "/index.html" },
    { "src": "/privacy", "dest": "/index.html" },
    { "src": "/forgot-password", "dest": "/index.html" },
    { "src": "/verify-email", "dest": "/index.html" },
    { "src": "/dashboard/(.*)", "dest": "/index.html" },
    { "src": "/knowledge/(.*)", "dest": "/index.html" },
    { "src": "/channels/(.*)", "dest": "/index.html" },
    { "src": "/analytics/(.*)", "dest": "/index.html" },
    { "src": "/settings/(.*)", "dest": "/index.html" },
    { "src": "/debug", "dest": "/index.html" },
    { "src": "/debug-onboarding", "dest": "/index.html" },
    { "src": "/test-training", "dest": "/index.html" },
    { "src": "/test-personality", "dest": "/index.html" },
    { "src": "/training", "dest": "/index.html" },
    { "src": "/ai-training", "dest": "/index.html" },
    { "src": "/security", "dest": "/index.html" },
    { "src": "/personality", "dest": "/index.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
} 